<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= header %></h1>
    </div>
    <div class="box">
        <% for(let i=0; i<newItems.length; i++) { %>
            <div class="item">
                <p><%= newItems[i] %></p>
                <div class="operations">
                    <i class="crud-icon update fas fa-pen"></i>
                    <i class="crud-icon delete fas fa-trash-alt"></i>
                    <i class="crud-icon cross fas fa-times"></i>
                </div>
            </div>
        <% } %>
    </div>
    <div class="box">
        <form method="POST" action="/">
            <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="listType" value= <%= header %> >+</button>
        </form>
    </div>
<%- include("footer") -%>