<%- include('./partials/header') -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="6"></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Publish</button>
</form>
<%- include('./partials/footer') -%>